@page
@model LoginModel

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Влез</h2>
                    <form method="post" class="text-left clearfix">
                        <div class="form-group">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Имейл">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Парола">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center">Влез</button>
                        </div>
                    </form>
                    <p class="mt-20">Нямаш профил?<a asp-page="/Account/Register"> Регистрирай се</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}