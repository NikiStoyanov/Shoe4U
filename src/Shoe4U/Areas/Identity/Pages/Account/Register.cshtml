@page
@model RegisterModel

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Регистрация</h2>
                    <form class="text-left clearfix" method="post" >
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Име" asp-for="Input.Name">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" asp-for="Input.Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Парола" asp-for="Input.Password">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Потвърди парола" asp-for="Input.ConfirmPassword">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center">Регистрация</button>
                        </div>
                    </form>
                    <p class="mt-20">Вече имаш акаунт?<a> Влез в него.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
