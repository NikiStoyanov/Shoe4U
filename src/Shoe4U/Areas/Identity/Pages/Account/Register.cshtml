@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрирай се";
}

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <a class="logo" href="index.html">
                        <img src="images/logo.png" alt="">
                    </a>
                    <h2 class="text-center">Регистрация</h2>
                    <form class="text-left clearfix" action="index.html">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Име">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Парола">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Потвърди парола">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center">Регистрация</button>
                        </div>
                    </form>
                    <p class="mt-20">Вече имаш акаунт?<a href="signin.html"> Влез в него.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
