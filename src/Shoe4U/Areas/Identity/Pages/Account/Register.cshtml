@page
@model LoginModel

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Регистрирай се</h2>
                    <form class="text-left clearfix">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Име">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Имейл">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Парола">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Потвърди парола">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" placeholder="Телефонен номер">
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" placeholder="Дата на раждане">
                        </div>
                        <div class="text-center">
                            <button class="btn btn-main text-center">Регистрация</button>
                        </div>
                    </form>
                    <p class="mt-20">Вече имаш акаунт?<a asp-page="/Account/Login"> Влез в него.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}