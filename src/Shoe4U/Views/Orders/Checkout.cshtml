@{
	ViewData["Title"] = "Плащане";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Поръчка</h1>
					<ol class="breadcrumb">
						<li><a asp-controller="Home" asp-action="Index">Начало</a></li>
						<li class="active">Поръчка</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="page-wrapper">
	<div class="checkout shopping">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="block billing-details">
						<h4 class="widget-title">Информация за клиента</h4>
						<form class="checkout-form">
							<div class="form-group">
								<label for="full_name">Име</label>
								<input type="text" class="form-control" id="full_name" placeholder="">
							</div>
							<div class="form-group">
								<label for="user_address">Адрес</label>
								<input type="text" class="form-control" id="user_address" placeholder="">
							</div>
							<div class="checkout-country-code clearfix">
								<div class="form-group">
									<label for="user_post_code">Пощенски код</label>
									<input type="text" class="form-control" id="user_post_code" name="zipcode"
										   value="">
								</div>
								<div class="form-group">
									<label for="user_city">Град</label>
									<input type="text" class="form-control" id="user_city" name="city" value="">
								</div>
							</div>
							<div id="cf-submit">
								<a asp-action="Confirmation">
									<input id="contact-submit" class="btn btn-transparent" value="Изпрати">
								</a>
							</div>
						</form>
					</div>
				</div>
				<div class="col-md-4">
					<div class="product-checkout-details">
						<div class="block">
							<h4 class="widget-title">Поръчка</h4>
							<div class="media product-card">
								<a class="pull-left" asp-controller="Products" asp-action="Details">
									<img class="media-object" src="~/images/shop/cart/cart-1.jpg" alt="Image" />
								</a>
								<div class="media-body">
									<h4 class="media-heading"><a asp-controller="Products" asp-action="Details">Зимни обувки</a></h4>
									<p class="price">1 x 89 лв.</p>
									<span class="remove">Премахни</span>
								</div>
							</div>
							<div class="summary-total">
								<span>Общо</span>
								<span>89 лв.</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>