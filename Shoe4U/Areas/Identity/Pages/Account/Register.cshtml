@page
@model RegisterModel

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Регистрирай се</h2>
                    <form method="post" class="text-left clearfix">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group">
                            <input asp-for="Input.Name" type="text" class="form-control" placeholder="Име">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Имейл">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Парола">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Потвърди парола">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center">Регистрация</button>
                        </div>
                    </form>
                    <p class="mt-20">Вече имаш акаунт?<a asp-page="/Account/Login"> Влез в него</a>.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}