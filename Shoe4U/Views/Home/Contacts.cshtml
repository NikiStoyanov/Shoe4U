@model Shoe4U.Models.Messages.CreateMessageInputModel

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Контакти</h1>
					<ol class="breadcrumb">
						<li><a asp-action="Index">Начало</a></li>
						<li class="active">Контакти</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="page-wrapper">
    <div class="contact-section">
        <div class="container">
            <div class="row">
                <div class="contact-form col-md-6 ">
                    <form id="contact-form" method="post" asp-controller="Home" asp-action="Message">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group">
                            <input type="text" asp-for="Name" placeholder="Име" class="form-control" >
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="email" asp-for="Email" placeholder="Имейл" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="text" asp-for="Subject" placeholder="Тема" class="form-control">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <textarea rows="6" asp-for="Content" placeholder="Съобщение" class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div id="cf-submit">
                            <button type="submit" id="contact-submit" class="btn btn-transparent">Изпрати</button>
                        </div>
                    </form>
                </div>

                <div class="contact-details col-md-6">
                    <div class="google-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2485.8461825938334!2d24.33272536125734!3d42.18909108773106!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14aca55433444bd9%3A0xc3688eff67d8a31f!2sMathematical%20Secondary%20School%20Konstantin%20Velichkov!5e0!3m2!1sen!2sbg!4v1699554495289!5m2!1sen!2sbg" width="90%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                    <ul class="contact-short-info">
                        <li>
                            <i class="tf-ion-ios-home"></i>
                            <span>ул. "Сан Стефано", №1, Пазарджик, България</span>
                        </li>
                        <li>
                            <i class="tf-ion-android-phone-portrait"></i>
                            <span>Телефон: +359 87 431 3981</span>
                        </li>
                        <li>
                            <i class="tf-ion-android-mail"></i>
                            <span>Имейл: support@shoe4u.com</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}