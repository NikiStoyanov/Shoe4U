@model Shoe4U.Models.Products.CreateProductInputModel

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Добави продукт</h1>
                    <ol class="breadcrumb">
                        <li>Администрация</li>
                        <li class="active">Добави продукт</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="dashboard-wrapper user-dashboard">
                    <form id="contact-form" method="post" asp-action="Create" role="form" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group">
                            <input type="text" asp-for="Name" placeholder="Име на продукта" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <select class="form-control" asp-for="Category" placeholder="Категория">
                                <option value="1">Мъжки</option>
                                <option value="2">Дамски</option>
                                <option value="3">Детски</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <textarea rows="6" asp-for="Description" placeholder="Описание" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="number" asp-for="Price" step="0.01" placeholder="Цена" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="number" asp-for="Quantity" step="1" placeholder="Количество" class="form-control">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="text" asp-for="Color" placeholder="Цвят" class="form-control">
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="text" asp-for="Material" placeholder="Материал" class="form-control">
                            <span asp-validation-for="Material" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="text" asp-for="Brand" placeholder="Марка" class="form-control">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="text" asp-for="Size" placeholder="Размер" class="form-control">
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="file" asp-for="Image" placeholder="Снимка" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div id="cf-submit">
                            <input type="submit" id="contact-submit" class="btn btn-transparent" value="Добави">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}